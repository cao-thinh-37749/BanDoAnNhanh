@model WebFood.Models.KhachHang

@{
    ViewData["Title"] = "Đổi Mật Khẩu";
    Layout = "_Layout";
}

<div class="password-change-container">
    <!-- Tiêu đề -->
    <div class="title-container">
        <h1>Đổi Mật Khẩu</h1>
    </div>

    <!-- Nút quay lại -->
    <div class="back-button-container">
        <a href="@Url.Action("Edit", "Login", new { email = ViewBag.UserEmail })" class="btn-back">
            <i class="fa fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <!-- Form đổi mật khẩu -->
    <div class="form-container">
        <form method="post" asp-action="ChangePassword" novalidate>
            <!-- Mật khẩu cũ -->
            <div class="form-group">
                <label for="OldPassword">Mật Khẩu Cũ</label>
                <input type="password" id="OldPassword" name="OldPassword"
                       class="form-control @(ViewData.ModelState["MatKhau"]?.Errors.Count > 0 ? "is-invalid" : "")"
                       placeholder="Nhập mật khẩu cũ ..." required oninput="this.nextElementSibling.textContent=''" />@*oninput="this.nextElementSibling.textContent=''"  => Tắt thông báo lỗi *@
                <span class="text-danger">@ViewData.ModelState["MatKhau"]?.Errors[0].ErrorMessage</span>

            </div>

            <!-- Mật khẩu mới -->
            <div class="form-group">
                <label for="NewPassword">Mật Khẩu Mới</label>
                <input type="password" id="NewPassword" name="NewPassword"
                       class="form-control @(ViewData.ModelState["MatKhauMoi"]?.Errors.Count > 0 ? "is-invalid" : "")"
                       placeholder="Nhập mật khẩu mới ..." required oninput="this.nextElementSibling.textContent=''" />
                <span class="text-danger">@ViewData.ModelState["MatKhauMoi"]?.Errors[0].ErrorMessage</span>
            </div>

            <!-- Xác nhận mật khẩu -->
            <div class="form-group">
                <label for="ConfirmPassword">Xác Nhận Mật Khẩu</label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword"
                       class="form-control @(ViewData.ModelState["XacNhan"]?.Errors.Count > 0 ? "is-invalid" : "")"
                       placeholder="Nhập lại mật khẩu mới ..." required oninput="this.nextElementSibling.textContent=''" />
                <span class="text-danger">@ViewData.ModelState["XacNhan"]?.Errors[0].ErrorMessage</span>
            </div>

            <div class="form-group">
                <span class="text-danger">@ViewData.ModelState[""]?.Errors[0].ErrorMessage</span>
            </div>

            <!-- Nút Submit -->
            <button type="submit" class="btn btn-primary">Cập nhật mật khẩu</button>
        </form>
    </div>
</div>

<style>

    body {
        font-family: 'Poppins', Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .password-change-container {
        max-width: 800px;
        margin: 3rem auto;
        background: #ffffff;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
        border-radius: 15px;
        padding: 3rem;
    }

    .title-container h1 {
        font-size: 2.5rem;
        font-weight: bold;
        text-align: center;
        color: #333;
        margin-bottom: 2rem;
        border-bottom: 3px solid #e74c3c;
        padding-bottom: 15px;
    }

    .back-button-container {
        text-align: left;
        margin-bottom: 1.5rem;
    }

    .btn-back {
        display: inline-block;
        text-decoration: none;
        color: #e74c3c;
        font-size: 1.2rem;
        font-weight: bold;
        padding: 10px 20px;
        border: 2px solid #e74c3c;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: #e74c3c;
            color: white;
        }

    .form-container {
        margin-top: 1.5rem;
    }

    .form-group {
        margin-bottom: 2rem;
    }

        .form-group label {
            font-weight: 700;
            color: #555;
            font-size: 1.1rem;
        }

    .form-control {
        width: 100%;
        padding: 15px;
        font-size: 1.2rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: border 0.3s;
    }

        .form-control:focus {
            border-color: #e74c3c;
            box-shadow: 0 0 8px rgba(231, 76, 60, 0.3);
        }

    .is-invalid {
        border-color: #e74c3c !important;
    }

    .error-message {
        display: block;
        margin-top: 8px;
        color: #e74c3c;
        font-size: 1rem;
    }

    .submit-container {
        text-align: center;
    }

    .btn-submit {
        width: 100%;
        padding: 15px;
        background: #e74c3c;
        color: white;
        font-size: 1.2rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        transition: background 0.3s;
    }

        .btn-submit:hover {
            background: #c0392b;
        }
</style>
