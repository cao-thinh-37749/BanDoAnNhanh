@model WebFood.Models.ChiTietDonDatHang

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
    Layout = "_LayoutAdmin";
}

<h1 class="text-center">Chi Tiết Đơn Hàng</h1>

<!-- Nút quay lại -->
<div class="text-left mb-4">
    <a href="@Url.Action("Index", "DonHangAdmin", new { area = "Admin" })" class="btn btn-outline-secondary btn-lg">
        <i class="fa fa-arrow-left"></i> Quay lại
    </a>
</div>

<hr style="margin:1.5rem" />

<div class="container">
    <div class="row justify-content-center">

        <!-- Hình ảnh sản phẩm bên phải -->
        <div class="col-md-4 text-center">
            <div class="avatar-preview mb-3">
                <img id="previewImage" src="@Model.SanPham!.HinhAnh" alt="Ảnh Sản Phẩm" class="rounded-circle" />
            </div>
            <label class="font-weight-bold image-label">Ảnh Sản Phẩm</label>
        </div>

        <!-- Form dữ liệu -->
        <div class="col-md-8">
            <form method="post" class="form-custom">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                @Html.HiddenFor(model => model.MaChiTiet) <!-- Trường ẩn cho Mã Chi Tiết -->
                <!-- Tên Khách Hàng -->
                <div class="form-group">
                    <label class="control-label">Tên Khách Hàng</label>
                    <input type="text" class="form-control" value="@Model.KhachHang!.HoTen" readonly />
                </div>

                <!-- Tên Sản Phẩm -->
                <div class="form-group">
                    <label class="control-label">Tên Sản Phẩm</label>
                    <input type="text" class="form-control" value="@Model.SanPham.TenSanPham" readonly />
                </div>

                <!-- Giá -->
                <div class="form-group">
                    <label class="control-label">Giá</label>
                    <input type="text" class="form-control" value="@String.Format("{0:C}", Model.Gia)" readonly />
                </div>

                <!-- Số Lượng -->
                <div class="form-group">
                    <label class="control-label">Số Lượng</label>
                    <input type="number" class="form-control" value="@Model.SoLuong" readonly />
                </div>

                <!-- Trạng Thái -->
                <div class="form-group">
                    <label class="control-label">Trạng Thái</label>
                    <input type="text" class="form-control" value="@Model.TrangThai" readonly />
                </div>

                <!-- Ngày Giao -->
                <div class="form-group">
                    <label class="control-label">Ngày Giao</label>
                    <input type="text" class="form-control" value="@Model.NgayGiao?.ToString("dd/MM/yyyy")" readonly />
                </div>

                <!-- Ngày Nhận -->
                <div class="form-group">
                    <label class="control-label">Ngày Nhận</label>
                    <input type="text" class="form-control" value="@Model.NgayNhan?.ToString("dd/MM/yyyy")" readonly />
                </div>

                <!-- Ngày Thanh Toán -->
                <div class="form-group">
                    <label class="control-label">Ngày Thanh Toán</label>
                    <input type="text" class="form-control" value="@Model.NgayThanhToan?.ToString("dd/MM/yyyy")" readonly />
                </div>

                <!-- Nút xóa và quay lại -->
                <div class="form-group">
                    <a href="@Url.Action("Details", "KhachHangAdmin",new { Id = Model.KhachHang.Id })" class="btn btn-info"><i class="fa fa-eye"></i> Xem chi tiết</a>
                </div>

            </form>

        </div>
    </div>
</div>

<br />
<style>
    .body-create {
        background-color: #f7f8fa;
        font-family: Arial, sans-serif;
        color: #333;
    }

    h1.text-center {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
        text-transform: uppercase;
        margin: 1.5rem;
        letter-spacing: 2px;
        font-family: 'Arial', sans-serif;
        text-align: center;
        padding: 10px 0;
        border-bottom: 2px solid #28a745;
    }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
        font-size: 1.1rem;
        padding: 10px 20px;
        margin-left: 1.5rem;
        font-weight: bold;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }

    .avatar-preview {
        width: 200px;
        height: 200px;
        border: 4px solid #28a745;
        border-radius: 50%;
        overflow: hidden;
        background-color: #f0f0f0;
        margin: 0 auto;
    }

        .avatar-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .image-label {
        display: block;
        margin-top: 10px;
        text-align: center;
        font-size: 1rem;
        color: #333;
        font-weight: bold;
        width: 100%;
    }

    .form-custom {
        padding: 2rem;
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        background-color: #f8f9fa;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }
</style>
